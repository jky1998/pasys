<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ntu.dao.StaffDao">
    <resultMap id="staffResultMap" type="edu.ntu.bean.Staff">
        <id property="id" column="s_id"/>
        <result property="no" column="s_no"/>
        <result property="name" column="s_name"/>
        <result property="gender" column="s_gender"/>
        <result property="password" column="s_password"/>
        <result property="workdate" column="s_workdate"/>
        <result property="position" column="s_position"/>
        <result property="mail" column="s_mail"/>
        <result property="phone" column="s_phone"/>
        <result property="idcard" column="s_idcard"/>
        <result property="address" column="s_address"/>
        <association property="department"
                     resultMap="departmentResultMap"/>
    </resultMap>
    <resultMap id="departmentResultMap" type="edu.ntu.bean.Department">
        <id property="id" column="d_id"/>
        <result property="no" column="d_no"/>
        <result property="name" column="d_name"/>
    </resultMap>

    <select id="findAll" resultMap="staffResultMap">
        select s.s_id,
          s.s_no,
          s.s_name,
          s.s_gender,
          s.s_password,
          s.s_workdate,
          s.s_position,
          s.s_mail,
          s.s_phone,
          s.s_idcard,
          s.s_address,
          d.d_id,
          d.d_no,
          d.d_name
        from staff as s
        left join department as d on s.s_department_id = d.d_id
    </select>

    <select id="findByName" resultMap="staffResultMap">
        select s_id,
          s_no,
          s_name,
          s_gender,
          s_password,
          s_workdate,
          s_position,
          s_mail,
          s_phone,
          s_idcard,
          s_address
        from staff
        where s_name=#{name}
    </select>

    <select id="findByNo" resultMap="staffResultMap">
        select s_id,
          s_no,
          s_name
        from staff
        where s_no=#{no}
    </select>

    <insert id="add">
        insert into staff(
          s_no,
          s_name,
          s_gender,
          s_password,
          s_workdate,
          s_position,
          s_mail,
          s_phone,
          s_idcard,
          s_address,
          s_department_id
        )
        values (
          #{no},
          #{name},
          #{gender},
          #{password},
          #{workdate},
          #{position},
          #{mail},
          #{phone},
          #{idcard},
          #{address},
          #{department.id}
        )
    </insert>
</mapper>